-- Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- Variables
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Configuration
local CONFIG = {
	ANIMATION_SPEED = 0.3,
	BUTTON_HOVER_SIZE = 1.05,
	COLORS = {
		PRIMARY = Color3.fromRGB(88, 101, 242),
		SECONDARY = Color3.fromRGB(67, 181, 129),
		BACKGROUND = Color3.fromRGB(32, 34, 37),
		SURFACE = Color3.fromRGB(47, 49, 54),
		TEXT = Color3.fromRGB(255, 255, 255),
		TEXT_SECONDARY = Color3.fromRGB(185, 187, 190),
		DANGER = Color3.fromRGB(237, 66, 69),
		SUCCESS = Color3.fromRGB(67, 181, 129),
		WARNING = Color3.fromRGB(250, 166, 26)
	}
}

-- Utility Functions
local Utils = {}

function Utils.CreateTween(instance, properties, duration, easingStyle, easingDirection)
	local tweenInfo = TweenInfo.new(
		duration or CONFIG.ANIMATION_SPEED,
		easingStyle or Enum.EasingStyle.Quad,
		easingDirection or Enum.EasingDirection.Out
	)
	local tween = TweenService:Create(instance, tweenInfo, properties)
	return tween
end

function Utils.SafeCall(func, ...)
	local success, result = pcall(func, ...)
	if not success then
		warn("Error in SafeCall:", result)
		return false, result
	end
	return true, result
end

function Utils.FormatNumber(number)
	if number >= 1000000 then
		return string.format("%.1fM", number / 1000000)
	elseif number >= 1000 then
		return string.format("%.1fK", number / 1000)
	else
		return tostring(number)
	end
end

-- Create ScreenGui
local function CreateScreenGui()
	local screenGui = Instance.new("ScreenGui")
	screenGui.Name = "AdvancedGUI"
	screenGui.ResetOnSpawn = false
	screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
	screenGui.Parent = playerGui
	return screenGui
end

-- Create UI Elements
local function CreateFrame(name, parent, size, position, backgroundColor, cornerRadius)
	local frame = Instance.new("Frame")
	frame.Name = name
	frame.Size = size
	frame.Position = position
	frame.BackgroundColor3 = backgroundColor or CONFIG.COLORS.SURFACE
	frame.BorderSizePixel = 0
	frame.Parent = parent
	
	if cornerRadius then
		local corner = Instance.new("UICorner")
		corner.CornerRadius = UDim.new(0, cornerRadius)
		corner.Parent = frame
	end
	
	return frame
end

local function CreateTextLabel(name, parent, size, position, text, textSize, textColor)
	local label = Instance.new("TextLabel")
	label.Name = name
	label.Size = size
	label.Position = position
	label.Text = text
	label.TextSize = textSize or 18
	label.TextColor3 = textColor or CONFIG.COLORS.TEXT
	label.BackgroundTransparency = 1
	label.Font = Enum.Font.GothamBold
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Parent = parent
	return label
end

local function CreateButton(name, parent, size, position, text, backgroundColor, callback)
	local button = Instance.new("TextButton")
	button.Name = name
	button.Size = size
	button.Position = position
	button.Text = text
	button.TextSize = 16
	button.TextColor3 = CONFIG.COLORS.TEXT
	button.BackgroundColor3 = backgroundColor or CONFIG.COLORS.PRIMARY
	button.BorderSizePixel = 0
	button.Font = Enum.Font.GothamBold
	button.AutoButtonColor = false
	button.Parent = parent
	
	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 8)
	corner.Parent = button
	
	-- Hover effects
	local originalSize = size
	button.MouseEnter:Connect(function()
		Utils.SafeCall(function()
			Utils.CreateTween(button, {Size = UDim2.new(size.X.Scale * CONFIG.BUTTON_HOVER_SIZE, 0, size.Y.Scale * CONFIG.BUTTON_HOVER_SIZE, 0)}, 0.2):Play()
		end)
	end)
	
	button.MouseLeave:Connect(function()
		Utils.SafeCall(function()
			Utils.CreateTween(button, {Size = originalSize}, 0.2):Play()
		end)
	end)
	
	-- Click callback
	if callback then
		button.MouseButton1Click:Connect(function()
			Utils.SafeCall(callback)
		end)
	end
	
	return button
end

local function CreateScrollingFrame(name, parent, size, position)
	local scrollFrame = Instance.new("ScrollingFrame")
	scrollFrame.Name = name
	scrollFrame.Size = size
	scrollFrame.Position = position
	scrollFrame.BackgroundTransparency = 1
	scrollFrame.BorderSizePixel = 0
	scrollFrame.ScrollBarThickness = 6
	scrollFrame.ScrollBarImageColor3 = CONFIG.COLORS.PRIMARY
	scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
	scrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
	scrollFrame.Parent = parent
	
	local layout = Instance.new("UIListLayout")
	layout.Padding = UDim.new(0, 10)
	layout.SortOrder = Enum.SortOrder.LayoutOrder
	layout.Parent = scrollFrame
	
	return scrollFrame
end

-- Notification System
local NotificationSystem = {}
NotificationSystem.notifications = {}

function NotificationSystem.Show(message, notifType)
	Utils.SafeCall(function()
		local color = CONFIG.COLORS.PRIMARY
		if notifType == "success" then
			color = CONFIG.COLORS.SUCCESS
		elseif notifType == "error" then
			color = CONFIG.COLORS.DANGER
		elseif notifType == "warning" then
			color = CONFIG.COLORS.WARNING
		end
		
		local notif = CreateFrame("Notification", screenGui, UDim2.new(0, 300, 0, 60), UDim2.new(1, -320, 0, 20 + (#NotificationSystem.notifications * 70)), color, 8)
		notif.ZIndex = 100
		
		local label = CreateTextLabel("Label", notif, UDim2.new(1, -20, 1, -20), UDim2.new(0, 10, 0, 10), message, 14, CONFIG.COLORS.TEXT)
		label.TextXAlignment = Enum.TextXAlignment.Center
		label.TextYAlignment = Enum.TextYAlignment.Center
		label.TextWrapped = true
		
		table.insert(NotificationSystem.notifications, notif)
		
		-- Slide in animation
		notif.Position = UDim2.new(1, 0, 0, 20 + (#NotificationSystem.notifications * 70))
		Utils.CreateTween(notif, {Position = UDim2.new(1, -320, 0, 20 + ((#NotificationSystem.notifications - 1) * 70))}, 0.5, Enum.EasingStyle.Back):Play()
		
		-- Auto-dismiss after 3 seconds
		task.delay(3, function()
			Utils.SafeCall(function()
				Utils.CreateTween(notif, {Position = UDim2.new(1, 0, 0, notif.Position.Y.Offset)}, 0.3):Play()
				task.wait(0.3)
				notif:Destroy()
				for i, n in ipairs(NotificationSystem.notifications) do
					if n == notif then
						table.remove(NotificationSystem.notifications, i)
						break
					end
				end
			end)
		end)
	end)
end

