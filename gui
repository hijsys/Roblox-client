local userIdLabel = CreateTextLabel("UserId", playerInfo, UDim2.new(1, -20, 0, 20), UDim2.new(0, 10, 0, 35), "ID: " .. player.UserId, 12, CONFIG.COLORS.TEXT)
userIdLabel.TextXAlignment = Enum.TextXAlignment.Center
userIdLabel.Font = Enum.Font.Gotham

-- Make GUI draggable
local dragging = false
local dragInput, mousePos, framePos

local function updateDrag(input)
	local delta = input.Position - mousePos
	Utils.CreateTween(mainContainer, {Position = UDim2.new(framePos.X.Scale, framePos.X.Offset + delta.X, framePos.Y.Scale, framePos.Y.Offset + delta.Y)}, 0.1):Play()
end

header.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		mousePos = input.Position
		framePos = mainContainer.Position
		
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		dragInput = input
	end
end)

header.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		if dragging then
			updateDrag(input)
		end
	end
end)

-- Entrance animation
mainContainer.Size = UDim2.new(0, 0, 0, 0)
Utils.CreateTween(mainContainer, {Size = UDim2.new(0, 800, 0, 500)}, 0.5, Enum.EasingStyle.Back):Play()

-- Welcome notification
task.wait(0.6)
NotificationSystem.Show("Welcome to Advanced GUI System!", "success")

-- FPS Counter (optional feature)
local fpsLabel = CreateTextLabel("FPS", screenGui, UDim2.new(0, 100, 0, 30), UDim2.new(1, -110, 0, 10), "FPS: 0", 14, CONFIG.COLORS.TEXT)
fpsLabel.TextXAlignment = Enum.TextXAlignment.Right

local lastUpdate = tick()
local frames = 0

RunService.RenderStepped:Connect(function()
	frames = frames + 1
	local currentTime = tick()
	if currentTime - lastUpdate >= 1 then
		local fps = math.floor(frames / (currentTime - lastUpdate))
		fpsLabel.Text = "FPS: " .. fps
		frames = 0
		lastUpdate = currentTime
	end
end)

-- Cleanup on player leaving
Players.PlayerRemoving:Connect(function(removingPlayer)
	if removingPlayer == player then
		Utils.SafeCall(function()
			screenGui:Destroy()
		end)
	end
end)

