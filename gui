-- Create Settings Page
local function CreateSettingsPage()
	local page = CreateFrame("Settings", contentArea, UDim2.new(1, 0, 1, 0), UDim2.new(0, 0, 0, 0), CONFIG.COLORS.BACKGROUND, 0)
	page.Visible = false
	
	local titleLabel = CreateTextLabel("Title", page, UDim2.new(1, -20, 0, 40), UDim2.new(0, 10, 0, 10), "âš™ï¸ Settings", 28, CONFIG.COLORS.TEXT)
	
	local scrollFrame = CreateScrollingFrame("ScrollFrame", page, UDim2.new(1, -20, 1, -70), UDim2.new(0, 10, 0, 60))
	
	-- Setting items
	local settings = {
		{name = "Music Volume", value = "75%"},
		{name = "Sound Effects", value = "On"},
		{name = "Graphics Quality", value = "High"},
		{name = "Show FPS", value = "Off"},
		{name = "Auto-Save", value = "On"},
		{name = "Notifications", value = "On"}
	}
	
	for i, setting in ipairs(settings) do
		local settingFrame = CreateFrame("Setting"..i, scrollFrame, UDim2.new(1, -10, 0, 50), UDim2.new(0, 0, 0, 0), CONFIG.COLORS.SURFACE, 8)
		
		local nameLabel = CreateTextLabel("Name", settingFrame, UDim2.new(0.6, 0, 1, 0), UDim2.new(0, 15, 0, 0), setting.name, 16, CONFIG.COLORS.TEXT)
		nameLabel.TextYAlignment = Enum.TextYAlignment.Center
		
		local valueButton = CreateButton("Value", settingFrame, UDim2.new(0.3, 0, 0, 35), UDim2.new(0.65, 0, 0.5, -17.5), setting.value, CONFIG.COLORS.PRIMARY, function()
			NotificationSystem.Show(setting.name .. " changed!", "success")
		end)
	end
	
	return page
end

-- Create Inventory Page
local function CreateInventoryPage()
	local page = CreateFrame("Inventory", contentArea, UDim2.new(1, 0, 1, 0), UDim2.new(0, 0, 0, 0), CONFIG.COLORS.BACKGROUND, 0)
	page.Visible = false
	
	local titleLabel = CreateTextLabel("Title", page, UDim2.new(1, -20, 0, 40), UDim2.new(0, 10, 0, 10), "ðŸŽ’ Inventory", 28, CONFIG.COLORS.TEXT)
	
	local scrollFrame = CreateScrollingFrame("ScrollFrame", page, UDim2.new(1, -20, 1, -70), UDim2.new(0, 10, 0, 60))
	
	local gridLayout = Instance.new("UIGridLayout")
	gridLayout.CellPadding = UDim2.new(0, 10, 0, 10)
	gridLayout.CellSize = UDim2.new(0, 120, 0, 120)
	gridLayout.Parent = scrollFrame
	
	scrollFrame:FindFirstChildOfClass("UIListLayout"):Destroy()
	
	-- Sample items
	local items = {
		{name = "Sword", emoji = "âš”ï¸", rarity = CONFIG.COLORS.PRIMARY},
		{name = "Shield", emoji = "ðŸ›¡ï¸", rarity = CONFIG.COLORS.SECONDARY},
		{name = "Potion", emoji = "ðŸ§ª", rarity = CONFIG.COLORS.SUCCESS},
		{name = "Armor", emoji = "ðŸŽ½", rarity = CONFIG.COLORS.WARNING},
		{name = "Helmet", emoji = "â›‘ï¸", rarity = CONFIG.COLORS.DANGER},
		{name = "Boots", emoji = "ðŸ‘¢", rarity = CONFIG.COLORS.PRIMARY},
		{name = "Ring", emoji = "ðŸ’", rarity = CONFIG.COLORS.SECONDARY},
		{name = "Amulet", emoji = "ðŸ“¿", rarity = CONFIG.COLORS.SUCCESS}
	}
	
	for i, item in ipairs(items) do
		local itemFrame = CreateFrame("Item"..i, scrollFrame, UDim2.new(0, 120, 0, 120), UDim2.new(0, 0, 0, 0), CONFIG.COLORS.SURFACE, 8)
		
		local itemButton = CreateButton("Button", itemFrame, UDim2.new(1, 0, 1, 0), UDim2.new(0, 0, 0, 0), "", item.rarity, function()
			NotificationSystem.Show("Selected " .. item.name, "primary")
		end)
		itemButton.Text = ""
		
		local emojiLabel = CreateTextLabel("Emoji", itemButton, UDim2.new(1, 0, 0.6, 0), UDim2.new(0, 0, 0, 10), item.emoji, 48, CONFIG.COLORS.TEXT)
		emojiLabel.TextXAlignment = Enum.TextXAlignment.Center
		emojiLabel.TextYAlignment = Enum.TextYAlignment.Center
		
		local nameLabel = CreateTextLabel("Name", itemButton, UDim2.new(1, 0, 0.3, 0), UDim2.new(0, 0, 0.7, 0), item.name, 14, CONFIG.COLORS.TEXT)
		nameLabel.TextXAlignment = Enum.TextXAlignment.Center
		nameLabel.TextYAlignment = Enum.TextYAlignment.Center
	end
	
	return page
end

-- Create sidebar navigation
local function CreateNavigation()
	local navButtons = {
		{name = "Dashboard", icon = "ðŸ“Š", page = "Dashboard"},
		{name = "Inventory", icon = "ðŸŽ’", page = "Inventory"},
		{name = "Settings", icon = "âš™ï¸", page = "Settings"},
		{name = "Shop", icon = "ðŸ›’", page = nil},
		{name = "Friends", icon = "ðŸ‘¥", page = nil},
		{name = "Stats", icon = "ðŸ“ˆ", page = nil}
	}
	
	for i, nav in ipairs(navButtons) do
		local button = CreateButton("Nav"..nav.name, sidebar, UDim2.new(1, -20, 0, 45), UDim2.new(0, 10, 0, 10 + (i-1) * 55), nav.icon .. " " .. nav.name, CONFIG.COLORS.SURFACE, function()
			-- Hide all pages
			for _, page in pairs(pages) do
				page.Visible = false
			end
			
			-- Show selected page
			if nav.page and pages[nav.page] then
				pages[nav.page].Visible = true
				NotificationSystem.Show("Navigated to " .. nav.name, "primary")
			else
				NotificationSystem.Show(nav.name .. " coming soon!", "warning")
			end
		end)
		button.TextXAlignment = Enum.TextXAlignment.Left
		
		local padding = Instance.new("UIPadding")
		padding.PaddingLeft = UDim.new(0, 15)
		padding.Parent = button
	end
end

-- Initialize pages
pages["Dashboard"] = CreateDashboardPage()
pages["Settings"] = CreateSettingsPage()
pages["Inventory"] = CreateInventoryPage()

-- Create navigation
CreateNavigation()

-- Player info in sidebar
